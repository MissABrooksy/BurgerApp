<h1>Eat Da Burger</h1>
<h2> Developed by {{ name }} </h2>

<div id="Burgers">
    <img id="pic" src="../public/assets/img/burger.jpg">
</div>

<div id="burgerText">
    <form id="burgerInput">
        <input id="typedBugers" type="text" placeholder="Enter Burger">
        <button id="submit" type="submit">Make the Burger</button>
        {{!-- onclick add to the "added burgers" div" --}}
    </form>
</div>

<div id="addedBurgers">
    <h2>Ready to Eat</h2>

    {{#if isEaten}}
    <ul>
        {{!-- // append //<button> --}}
    </ul>
    {{/if}}
</div>

<div id="eatenBurgers">
    <h2>Eaten!</h2>

    {{#if isEaten === true}}
    <ul>
        {{!-- display value of the button --}}
    </ul>
    {{/if}}
</div>